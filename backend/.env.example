# LLM Provider Configuration
# Provider: "openai" or "openrouter"
LLM_PROVIDER=openrouter

# OpenRouter Configuration (recommended for multi-model access)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_APP_NAME=BrowserMind
OPENROUTER_APP_URL=https://github.com/browsermind/browsermind
DEFAULT_MODEL=anthropic/claude-3.5-sonnet
FALLBACK_MODEL=openai/gpt-4-turbo-preview

# OpenAI Configuration (fallback)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# Model Parameters
TEMPERATURE=0.3
MAX_TOKENS=4000
LLM_TIMEOUT=60

# Database Configuration
DATABASE_URL=sqlite:///./browsermind.db
DATABASE_ENCRYPTION_KEY=your_32_byte_base64_encryption_key_here

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true
LOG_LEVEL=info

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_TIMEOUT=30
WS_MAX_CONNECTIONS=100
WS_RATE_LIMIT=100

# Security
CORS_ORIGINS=["http://localhost:3000","chrome-extension://*"]
SECRET_KEY=your_secret_key_here

# Feature Flags
ENABLE_CLEANUP_JOB=true
CLEANUP_INTERVAL_HOURS=24
SESSION_RETENTION_DAYS=90
